function! s:GitDiffView(...) abort
	let commit = (a:0 >= 1)? a:1 : ''
	call gdv#diffview#start(commit)
endfunc


"----------------------------------------------------------------------
" command definition
"----------------------------------------------------------------------
command! -nargs=? GitDiffView call s:GitDiffView(<f-args>)


